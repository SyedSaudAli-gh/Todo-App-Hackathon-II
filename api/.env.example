# Database Configuration
DATABASE_URL=postgresql+psycopg://username:password@host:port/database?sslmode=require

# JWT Authentication (RS256)
# RSA public key from Better Auth for JWT validation
# Generate keys with: openssl genrsa -out private_key.pem 2048 && openssl rsa -in private_key.pem -pubout -out public_key.pem
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_ALGORITHM=RS256

# API Configuration
API_VERSION=v1
DEBUG=true
PORT=8001
